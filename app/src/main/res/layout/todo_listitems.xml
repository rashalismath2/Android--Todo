<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/list_item_background_shape"
  >

    <GridLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:id="@+id/todo_title"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:text="@string/str_todo_item_title"
            android:textSize="20sp"
            android:paddingStart="10dp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:layout_row="0"
            android:layout_column="0"

            />

        <TextView
            android:id="@+id/todo_desc"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:text="@string/str_todo_item_desc"
            android:textSize="15sp"

            android:layout_row="1"
            android:paddingStart="10dp"
            android:layout_column="0"

            />
        <TextView
            android:id="@+id/todo_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_todo_item_time"
            android:textSize="20sp"
            android:layout_row="0"
            android:gravity="center"
            android:layout_column="1"
            android:textColor="@color/colorAccent"
            android:layout_rowSpan="2"

            />


    </GridLayout>


</LinearLayout>